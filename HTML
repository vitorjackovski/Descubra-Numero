<script>
    var numeroSecreto = 0;
    var tentativas = 0;
    var limiteTentativas = 10;
    var melhorPontuaÃ§Ã£o = localStorage.getItem('melhorPontuaÃ§Ã£o') || Infinity;

    function atualizar() {
        numeroSecreto = parseInt(Math.random() * 100);
        tentativas = 0;
        document.getElementById('bet').value = '';
        document.getElementById('feedback').innerText = '';
        document.getElementById('tentativas').innerText = "Tentativas restantes: " + limiteTentativas;
        updateRecordDisplay();
        console.log('NÃºmero para encontrar: ' + numeroSecreto);
    }

    function verifyNumber() {
        var element = document.getElementById('bet');
        var bet = Number(element.value);

        if (bet > 100 || bet < 0 || isNaN(bet)) {
            alert('ğŸš¨ nÃºmero invalido');
            return;
        }

        tentativas++;
        document.getElementById('tentativas').innerText = "Tentativas restantes: " + (limiteTentativas - tentativas);

        if (bet > numeroSecreto) {
            alert(' ğŸš¨ O nÃºmero Ã© MENOR!');
        } else if (bet < numeroSecreto) {
            alert(' ğŸš¨ O nÃºmero Ã© MAIOR!');
        } else {
            alert(' âœ… ParabÃ©ns! VocÃª acertou em ' + tentativas + ' tentativas!', 'green');

            if (tentativas < melhorPontuaÃ§Ã£o) {
                melhorPontuaÃ§Ã£o = tentativas;
                localStorage.setItem('melhorPontuaÃ§Ã£o', melhorPontuaÃ§Ã£o);
                alert('ğŸš¨ Novo recorde: ' + melhorPontuaÃ§Ã£o + ' tentativas!');
            }
            atualizar();
            return;
        }

        if (tentativas >= limiteTentativas) {
            updateFeedback(' ğŸš¨VocÃª perdeu! O nÃºmero era ' + numeroSecreto);
            atualizar();
        }
    }

    function updateFeedback(message, color) {
        var feedback = document.getElementById('feedback');
        feedback.innerText = message;
        feedback.style.color = color;
    }

    function updateRecordDisplay() {
        document.getElementById('record').innerText = 'ğŸ•¶ï¸ Recorde: ' + (melhorPontuaÃ§Ã£o === Infinity ? 'Nenhum' : melhorPontuaÃ§Ã£o + ' tentativas');
    }

    atualizar();
</script>
